

{% extends "layout.html.twig" %}

{% block title %} Ajout Entreprise{% endblock %}

{% block content %}


<h2 class="text-center">Ajout d'une entreprise </h2>
<div class="container" id="contenu-ajout-entreprise">

    {{ form_start(entrepriseForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="well">
        <fieldset>
            <legend> Informations générales sur l'entreprise </legend>

            <h5 class="pull-right">* champs obligatoires</h5>
            <div style="display: none;">
            <div class="form-group">
                {{ form_label(entrepriseForm.id, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.id) }}
                    {{ form_widget(entrepriseForm.id, { 'attr':  {
                        'rows': '1',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.nom, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.nom) }}
                    {{ form_widget(entrepriseForm.nom, { 'attr':  {
                        'rows': '1',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.adresse, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.adresse) }}
                    {{ form_widget(entrepriseForm.adresse, { 'attr':  {
                        'rows': '1',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.ville, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.ville) }}
                    {{ form_widget(entrepriseForm.ville, { 'attr':  {
                        'rows': '1',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.pays, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.pays) }}
                    {{ form_widget(entrepriseForm.pays, { 'attr':  {
                        'rows': '1',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.mail, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.mail) }}
                    {{ form_widget(entrepriseForm.mail, { 'attr':  {
                        'rows': '1',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.description, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.description) }}
                    {{ form_widget(entrepriseForm.description, { 'attr':  {
                        'rows': '3',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(entrepriseForm.logo, null, { 'label_attr':  {
                    'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(entrepriseForm.logo) }}
                    {{ form_widget(entrepriseForm.logo, { 'attr':  {
                        'rows': '1'
                    }}) }}
                </div>
            </div>
        </fieldset>
    </div>
    <div class="form-group">
        <div class="boutons-entreprise">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <button type="submit" class="bouton-enregistrer btn btn-default btn-primary center-block left"><span
                            class="glyphicon glyphicon-log-in"></span> Enregistrer
                </button>
                <button class="bouton-annuler btn btn-default btn-primary center-block left" title="Supprimer"
                        data-toggle="modal" data-target="#myModal">Annuler
                </button>


                <!-- Fenetre modale : confirmation pour quitter la page -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Confirmation demandée </h4>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr(e) de vouloir quitter la page ? Les informations ne seront pas
                                sauvegardées.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                <a href="javascript:history.go(-1)" class="btn btn-danger">Confirmer</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(entrepriseForm) }}
</div>
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCdZKJPUQeDqRN4v5kgO0t8unvVjhzdvfE&libraries=places"></script>
    <script type="text/javascript" src="{{ asset('/lib/js/autocomplete_entreprise.js') }}"></script>

{% endblock %}